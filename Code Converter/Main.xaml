<Page x:Class="Code_Converter.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Code_Converter"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="Main">

    <Grid Background="White">
        <TextBlock Text="Select Converter" HorizontalAlignment="Center"
    Style="{StaticResource MaterialDesignDisplay1TextBlock}"/>
        <Button Content="Asssembler" Width="150" VerticalAlignment="Top" Margin="0,110,0,0" Click="AssemblyConverter"/>
        <Button Content="VM Translator" Width="150" VerticalAlignment="Bottom" Margin="0,0,0,70" Click="VMConverter"/>
    </Grid>
</Page>